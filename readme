          #Package Management
pacs="sudo pacman -S "
pacss="sudo pacman -Ss "
pacr="sudo pacman -Rns "
yays='yay -S '
bigups="sudo pacman -Syyu && yay && flatpak upgrade"
cleanup='sudo pacman -Rns (pacman -Qtdq)
fixpacman='sudo rm /var/lib/pacman/db.lck'

              #ShellChange
alias shellfish 'chsh -s /bin/fish'
alias shellzsh 'chsh -s /bin/zsh'
alias shellbash 'chsh -s /bin/zsh

                #Power
shutdown='systemctl poweroff'
uefi='systemctl reboot --firmware-setup'

               #webapps
alias lindev='curl -fsSL https://christitus.com/linuxdev | sh'

                #Hyprland
alias hypranimate='sudo micro ~/.config/hypr/animation.conf'
alias hyprconfkeys'sudo micro ~/.config/hypr/keybinds.conf'
