        PACMAN | AUR
alias -s pacs="sudo pacman -S "
alias -s pacss="sudo pacman -Ss "
alias -s pacr="sudo pacman -Rns "
alias -s pacrd="sudo pacman -Rnsdd " 
alias -s yays='yay -S '
alias -s bigups="sudo pacman -Syyu && yay && flatpak upgrade"
alias -s fuckorphans="sudo pacman -Rns (pacman -Qtdq)"
alias -s lockbgone="sudo rm /var/lib/pacman/db.lck"

    Shell change
alias -s shellfish="chsh -s /bin/fish"
alias -s shellzsh="chsh -s /bin/zsh"
alias -s shellbash="chsh -s /bin/zsh"
alias -s shellnu="chsh -s /bin/nu"

#   Power
alias -s shutdown='systemctl poweroff'
alias -s uefi='systemctl reboot --firmware-setup'
alias -s

#    Hyprland Config QuickAccess
alias -s hyprconf'sudo micro ~/.config/hypr/hyprland.conf'
alias -s hyprkeys='sudo micro ~/.config/hypr/keybinds.conf'

#    git curls
alias -s "spicetistall =curl -fsSL https://raw.githubusercontent.com/spicetify/cli/main/install.sh | sh"
alias -s lindev='curl -fsSL https://christitus.com/linuxdev | sh'
alias -s lindev='curl -fsSL https://christitus.com/linuxdev | sh'

# Spicetify Shortcuts
alias -s spiceply="spicetify apply"         #Spicetify apply update
alias -s spotibackply="spicetify restore backup apply"         #for when spiceitfy apply dont werk
alias -s spotifup="spicetify update && spicetify apply"         #spictify cli update and apply

# Flatpak cli 
alias -s flatlist='flatpak lalias -s' 
alias -s flatstall='flatpak install 'ist'
alias -s flatrm='flatpak remove '
alias -s flatup='flatpak upgrade ' 

#    Miscellaneous 
alias -s groupadd="sudo usermod -a -G "         #add user to system group

